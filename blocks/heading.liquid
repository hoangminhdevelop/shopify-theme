{% assign style = 'margin-top:{{ block.settings.margin_top }}px; margin-bottom: {{ block.settings.margin_bottom }}px' %}

{% case block.settings.heading_level %}
  {% when 'h1' %}
    <h1 style="{{ style }}">
      {{ block.settings.text }}
    </h1>
  {% when 'h2' %}
    <h2 style="{{ style }}">{{ block.settings.text }}</h2>
  {% when 'h3' %}
    <h3 style="{{ style }}">{{ block.settings.text }}</h3>
  {% when 'h4' %}
    <h4 style="{{ style }}">{{ block.settings.text }}</h4>
  {% when 'h5' %}
    <h5 style="{{ style }}">{{ block.settings.text }}</h5>
  {% when 'h6' %}
    <h6 style="{{ style }}">{{ block.settings.text }}</h6>
{% endcase %}

{% schema %}
{
  "name": "Heading",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Heading content",
      "default": "Heading content"
    },
    {
      "type": "select",
      "label": "Heading level",
      "id": "heading_level",
      "info": "Select the heading level for SEO purposes. H1 is the most important, and H6 is the least.",
      "options": [
        {
          "label": "Heading 1",
          "value": "h1"
        },
        {
          "label": "Heading 2",
          "value": "h2"
        },
        {
          "label": "Heading 3",
          "value": "h3"
        },
        {
          "label": "Heading 4",
          "value": "h4"
        },
        {
          "label": "Heading 5",
          "value": "h5"
        },
        {
          "label": "Heading 6",
          "value": "h6"
        }
      ],
      "default": "h1"
    },
    { "type": "range", "label": "Margin top", "id": "margin_top", "default": 16, "min": 0, "max": 100, "step": 1 },
    { "type": "range", "label": "Margin bottom", "id": "margin_bottom", "default": 16, "min": 0, "max": 100, "step": 1 }
  ]
}
{% endschema %}
