{{ 'subtext.css' | asset_url | stylesheet_tag }}
<script src="{{ 'subtext.js' | asset_url }}" defer></script>

{% if block.settings.text == blank %}
  {% assign block.settings.text = 'Subtext content' %}
{% endif %}

{% if block.settings.margin_top == blank %}
  {% assign block.settings.margin_top = 16 %}
{% endif %}

{% if block.settings.margin_bottom == blank %}
  {% assign block.settings.margin_bottom = 16 %}
{% endif %}
<span
  style="margin-top:{{ block.settings.margin_top }}px; margin-bottom: {{ block.settings.margin_bottom }}px"
  class="block subtext"
>
  {{- block.settings.text -}}
</span>

{% schema %}
{
  "name": "Subtext",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Subtext content",
      "default": "subtext content"
    },
    { "type": "range", "label": "Margin top", "id": "margin_top", "default": 16, "min": 0, "max": 100, "step": 1 },
    { "type": "range", "label": "Margin bottom", "id": "margin_bottom", "default": 16, "min": 0, "max": 100, "step": 1 }
  ],
  "presets": [
    {
      "name": "Subtext",
      "settings": {}
    }
  ]
}
{% endschema %}
