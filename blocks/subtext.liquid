<span
  style="margin-top:{{ block.settings.margin_top }}px; margin-bottom: {{ block.settings.margin_bottom }}px"
  class="block"
>
  {{- block.settings.text -}}
</span>

{% schema %}
{
  "name": "Subtext",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Subtext content",
      "default": "Lorem ipsum dolor sit amet."
    },
    { "type": "range", "label": "Margin top", "id": "margin_top", "default": 16, "min": 0, "max": 100, "step": 1 },
    { "type": "range", "label": "Margin bottom", "id": "margin_bottom", "default": 16, "min": 0, "max": 100, "step": 1 }
  ]
}
{% endschema %}
