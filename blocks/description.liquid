<p
  class="description"
  style="color:{{ block.settings.color}}; margin-top:{{ block.settings.margin_top }}px; margin-bottom: {{ block.settings.margin_bottom }}px"
>
  {{ block.settings.text }}
</p>

{% stylesheet %}
  .description {
    font-size: 16px;
    line-height: 1.5;
    color: red;
  }
{% endstylesheet %}

{% javascript %}
  console.log('Description loaded');
{% endjavascript %}

{% schema %}
{
  "name": "Description",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Description content",
      "default": "Lorem Ipsum is simply dummy text of the printing and typesetting industry."
    },
    {
      "type": "color",
      "id": "color",
      "label": "Description content",
      "default": "#000000"
    },
    { "type": "range", "label": "Margin top", "id": "margin_top", "default": 16, "min": 0, "max": 100, "step": 1 },
    { "type": "range", "label": "Margin bottom", "id": "margin_bottom", "default": 16, "min": 0, "max": 100, "step": 1 }
  ],
  "presets": [
    {
      "name": "Description",
      "settings": {}
    }
  ]
}
{% endschema %}
