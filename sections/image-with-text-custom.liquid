<section class="page-width">
  <div class="iwt-container flex items-center py-5 gap-4 {% if section.settings.image_position == 'right' %} flex-row-reverse {% endif %}">
    <div class="w-1/2">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 500 | image_tag }}
      {% else %}
        {{ 'collection-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
    <div class="iwt-content w-1/2">
      {% content_for 'blocks' %}
    </div>
  </div>
</section>

{% javascript %}
  console.log('Image with text loaded');
{% endjavascript %}

{% schema %}
{
  "name": "Image with Text Custom",
  "settings": [
    {
      "type": "header",
      "content": "Image with Text Custom Settings"
    },
    { "type": "image_picker", "id": "image", "label": "Image" },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        {
          "label": "Right",
          "value": "right"
        },
        {
          "label": "Left",
          "value": "left"
        }
      ],
      "default": "left"
    }
  ],
  "blocks": [
    {
      "type": "heading"
    },
    {
      "type": "description"
    },
    {
      "type": "subtext"
    },
    {
      "type": "button"
    }
  ],
  "max_blocks": 5
}
{% endschema %}
